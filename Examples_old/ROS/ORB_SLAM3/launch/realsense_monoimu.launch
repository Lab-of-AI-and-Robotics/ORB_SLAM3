<launch>
    <!-- ORB-SLAM3 -->
    <node name="orb_slam3_stereo_inertial" pkg="ORB_SLAM3" type="Mono_Inertial" output="screen">
        <!-- for EuRoC dataset -->
        <remap from="/camera/image_raw"         to="/camera/color/image_raw"/>
        <remap from="/imu"                      to="/camera/imu"/>

        <!-- Parameters for original ORB-SLAM3 -->
        <param name="voc_file"      type="string"   value="/ORB_SLAM3/Vocabulary/ORBvoc.txt" />
        <param name="settings_file" type="string"   value="/ORB_SLAM3/Examples/Monocular-Inertial/RealSense_D435i.yaml" />
    </node>
</launch>